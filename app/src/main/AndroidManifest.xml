<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.justmaino.barcodebattler">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.autofocus" />

    <meta-data
        android:name="com.google.android.gms.vision.DEPENDENCIES"
        android:value="barcode" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".BattleActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".GameOverActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".ScanBarCodeActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".MonsterCollectionActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".MonsterDetailsActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".AttackItemsActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".DefenseItemsActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".ScanAttackDefenseItemsActivity"
            android:label="@string/app_name">
        </activity>

    </application>

</manifest>